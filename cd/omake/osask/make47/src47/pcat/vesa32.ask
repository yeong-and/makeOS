void GAPI_putbox()
{
	/* 256색 블록 전송 */
	/* cmd, opt, x0, y0, xsize, ysize, yskip, ofs, sel */
	/* opt의 bit0-3은 모드 : 1, 2, 4 */

	/* align은 아직 거의 배려하고 있지 않다 */

	GAPI_WORK *work == ES:0x0000;
	int *cmd == FS:EBX;
	unsigned char *p == ES:EDI;
	unsigned int *q == DS:ESI;
	unsigned int *pi == ES:EDI;
	unsigned short *ps == ES:EDI;

	PUSH(ES);
	PUSH(EBP);
	EBP = work->linebytes;
	ESI = cmd[12]; /* y */
	asmout("LES EDI, DWORD FS:[EBX+28]");
	IMUL(ESI, EBP);
	EAX = cmd[ 8]; /* x */
	EDX = cmd[20]; /* ysize */
	LEA(ESI, [ESI + EAX * 4 + 0xe0000000]);
	EAX = cmd[16]; /* xsize */
	EAX *= 4;
	EBP -= EAX;
	AL = (char) cmd[4];
	TEST(AL, 0x10);
	if (! = 0)
		goto putbox1;
	AL &= 0x2f;
	if (AL == 0x01) {
		do {
			ECX = cmd[16]; /* xsize */
			do {
				EAX = *p;
				(offset) p++;
				EAX &= 0x0f; /* 버그 회피를 위해 */
				asmout("MOV EAX,[CS:colortable32+EAX*4]");
				*q = EAX;
				(offset) q += 4;
				ECX--;
			} while (! = 0);
			(offset) p += cmd[24]; /* yskip */
			(offset) q += EBP;
			EDX--;
		} while (! = 0);
		(offset) cmd += 36;
		POP(EBP);
		POP(ES);
		asmout("JMP next_command");
	}
	AL |= 0x20; /* 공용이니까 */
	if (AL == 0x22) {
		/* direct color 16bit, RRRRRGGG_GGGBBBBB */
		do {
			ECX = cmd[16]; /* xsize */
			PUSH(EBP);
			PUSH(EDX);
			do {
				EDX = *ps;
				(offset) ps += 2;
				EAX = EDX;
				EBP = EDX;
				EAX <<= 3;
				EBP <<= 5;
				EDX <<= 8;
				EAX &= 0x000000f8;
				EBP &= 0x0000fc00;
				EDX &= 0x00f80000;
				EAX |= EBP;
				EAX |= EDX;
				*q = EAX;
				(offset) q += 4;
				ECX--;
			} while (! = 0);
			POP(EDX);
			POP(EBP);
			(offset) p += cmd[24]; /* yskip */
			(offset) q += EBP;
			EDX--;
		} while (! = 0);
		(offset) cmd += 36;
		POP(EBP);
		POP(ES);
		asmout("JMP next_command");
	}
	if (AL == 0x24) {
		/* direct color 32bit(24bit) */
		do {
			ECX = cmd[16]; /* xsize */
			ECX -= 8;
			if ((unsigned) >= 0) {
				PUSH(EDX);
				do {
					EAX = pi[ 0]; EDX = pi[ 4];
					q[ 0]  = EAX; q[ 4]  = EDX;
					EAX = pi[ 8]; EDX = pi[12];
					q[ 8]  = EAX; q[12]  = EDX;
					EAX = pi[16]; EDX = pi[20];
					q[16]  = EAX; q[20]  = EDX;
					EAX = pi[24]; EDX = pi[28];
					(offset) pi += 32;
					q[24]  = EAX; q[28]  = EDX;
					(offset) q += 32;
					ECX -= 8;
				} while ((unsigned) >= 0);
				POP(EDX);
			}
			ECX += 8;
			if (! = 0) {
				do {
					EAX = *pi;
					(offset) pi += 4;
					*q = EAX;
					(offset) q += 4;
					ECX--;
				} while (! = 0);
			}
			(offset) p += cmd[24]; /* yskip */
			(offset) q += EBP;
			EDX--;
		} while (! = 0);
		(offset) cmd += 36;
		POP(EBP);
		POP(ES);
		asmout("JMP next_command");
	}
	INT(0x03);

putbox1:
	do {
		ECX = cmd[16]; /* xsize */
		do {
			EAX = *p;
			(offset) p++;
			if (EAX ! = cmd[36]) {
				asmout("MOV EAX,[CS:colortable32+EAX*4]");
				*q = EAX;
			}
			(offset) q += 4;
			ECX--;
		} while (! = 0);
		(offset) p += cmd[24]; /* yskip */
		(offset) q += EBP;
		EDX--;
	} while (! = 0);
	(offset) cmd += 40;
	POP(EBP);
	POP(ES);
	asmout("JMP next_command");
}

