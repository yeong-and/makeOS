		EAX = cmd[16];
		LEA(EDI, [EDI + EAX * 4 + 0xe0000000]);
		POP(EAX);
		EDI += work->linebytes;
		do {
			[DS:ECX] &= EAX;
			ECX += work->linebytes;
			[DS:EDI] &= EAX;
			EDI += work->linebytes;
			EBP--;
		} while (! = 0);
		(offset) cmd += 28;
		asmout("JMP next_command");
	}
//	if (CL == 0x80) { /* or */
		/* 별다른 묘책이 없는 그리기 루틴 */
		ECX = ESI;
		do {
			[DS:ESI] |= EAX;
			ESI += 4;
			[DS:EDX] |= EAX;
			EDX += 4;
			EDI--;
		} while (! = 0);
		POP(EDI);
		ECX += work->linebytes;
		PUSH(EAX);
		EAX = cmd[16];
		LEA(EDI, [EDI + EAX * 4 + 0xe0000000]);
		POP(EAX);
		EDI += work->linebytes;
		do {
			[DS:ECX] |= EAX;
			ECX += work->linebytes;
			[DS:EDI] |= EAX;
			EDI += work->linebytes;
			EBP--;
		} while (! = 0);
		(offset) cmd += 28;
		asmout("JMP next_command");
//	}

line:
	(offset) cmd += 28;
	asmout("JMP next_command");

error:
	INT(0x03);
}
